<Window x:Class="WPF_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="425" Margin="120,-2,-4,-4" VerticalAlignment="Top" Width="676" MouseDown="canvas_MouseDown">
        <Button x:Name="btnClear" Content="Clear" Canvas.Left="-114" Canvas.Top="159" Width="100" Height="38" Click="btnClear_Click"/>
        <TextBox x:Name="txtColor" Height="56" Canvas.Left="-114" TextWrapping="Wrap" Text="TextBox" Canvas.Top="82" Width="100" TextChanged="txtColor_TextChanged"/>
    </Canvas>
</Window>
    
